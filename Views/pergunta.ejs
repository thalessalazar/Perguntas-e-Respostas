<%- include('./partials/header.ejs')%>

<body>
    <%- include('./partials/navbar.ejs')%>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <textarea class="form-control" name="corpo" id="resposta-corpo"
                placeholder="Digite sua resposta aqui!"></textarea>
            <input type="hidden" name="perguntaId" value=" <%=pergunta.id %>">
            <br>
            <button type="submit" class="btn btn-dark">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
        <div class="card">
            <div class="card-body">
                <p><%=resposta.corpo%></p>
            </div>
        </div>
        <br>
        <% }) %>
    </div>

</body>
<%- include('./partials/footer.ejs')%>